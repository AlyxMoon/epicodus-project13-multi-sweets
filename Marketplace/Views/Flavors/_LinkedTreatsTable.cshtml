@using Marketplace.Models
@model System.Collections.Generic.List<Treat>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Treat Name</th>
    </tr>
  </thead>
  <tbody>
    @if (Model.Count == 0)
    {
      <tr><td colspan="2">No treats</td></tr>
    }

    @foreach (Treat treat in Model)
    {
      <tr>
        <td>
          <a
            asp-controller="Treats"
            asp-action="Details"
            asp-route-id="@treat.TreatId"
            class="btn btn-secondary btn-sm"
          >See Details</a>
          <a
            asp-controller="Flavors"
            asp-action="DeleteTreat"
            asp-route-flavorId="@ViewBag.FlavorId"
            asp-route-treatId="@treat.TreatId"
            class="btn btn-danger btn-sm"
          >Remove Treat</a>
        </td>
        <td>@treat.Name</td>
      </tr>
    }
  </tbody>
</table>