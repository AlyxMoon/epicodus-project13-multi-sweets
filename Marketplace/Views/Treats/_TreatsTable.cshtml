@using Marketplace.Models
@model System.Collections.Generic.List<Treat>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    @if (Model.Count == 0)
    {
      <tr><td colspan="2">No treats yet, go add some!</td></tr>
    }
    
    @foreach (Treat treat in Model)
    {
      <tr>
        <td>
          <a
            asp-controller="Treats"
            asp-action="Details"
            asp-route-id="@treat.TreatId"
            class="btn btn-primary btn-sm"
          >See Details</a>

          <a
            asp-controller="Treats"
            asp-action="Edit"
            asp-route-id="@treat.TreatId"
            class="btn btn-secondary btn-sm"
          >Edit</a>

          <a
            asp-controller="Treats"
            asp-action="Delete"
            asp-route-id="@treat.TreatId"
            class="btn btn-danger btn-sm"
          >Delete</a>
        </td>
        <td>@treat.Name</td>
      </tr>
    }
  </tbody>
</table>